FROM python:3.10-slim

# Install git (required for submodules and GitHub verification)
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Clone repo with submodules
ARG REPO_URL=https://github.com/trajectoryRL/trajectoryrl.git
ARG REPO_BRANCH=main

RUN git clone --recursive -b ${REPO_BRANCH} ${REPO_URL} . && \
    git submodule update --init --recursive

# Verify clawbench is at correct version (v0.3.0)
RUN cd clawbench && git checkout e50824df75e10989c0adaf398b6897b5284701d5

# Install Python dependencies
RUN pip install --no-cache-dir -e .

# Install ClawBench scoring (needed by run_episode.py)
RUN pip install --no-cache-dir -e ./clawbench 2>/dev/null || \
    pip install --no-cache-dir httpx pyyaml

# Create directories
RUN mkdir -p /app/logs /tmp/trajectoryrl_packs /workspace

# Prevent .pyc files (avoids conflicts during docker compose watch sync)
ENV PYTHONDONTWRITEBYTECODE=1

# Environment variables (override with docker-compose)
ENV WALLET_NAME=validator
ENV WALLET_HOTKEY=default
ENV NETUID=11
ENV NETWORK=finney
ENV LOG_LEVEL=INFO
ENV EPOCH_INTERVAL=720

# Run validator
CMD ["python", "-u", "neurons/validator.py"]
